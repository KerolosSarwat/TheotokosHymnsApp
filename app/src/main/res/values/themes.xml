<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Theotokos" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/dark_red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/dark_red_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:typeface">@font/cairo</item>
        <item name="fontFamily">@font/cairo</item>

        <item name="colorPrimary">@color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="textInputStyle">@style/Widget.Theotokos.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Theotokos.Button</item>
        <item name="editTextStyle">@style/Widget.Theotokos.TextInputEditText</item>
        <item name="navigationViewStyle">@style/Widget.Theotokos.NavigationView</item>
        <item name="bottomNavigationStyle">@style/Widget.Theotokos.BottomNavigationView</item>


    </style>
</resources>