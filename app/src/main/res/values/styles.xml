<resources>
    <style name="Widget.Theme.Theotokos.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textViewStyle">@font/cairo</item>
        <item name="android:buttonStyle">@font/cairo</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_red</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textViewStyle">@font/cairo</item>
        <item name="android:buttonStyle">@font/cairo</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.RoundedActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textViewStyle">@font/cairo</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>
    <!-- Dark Red Outlined TextInputLayout -->
    <style name="Widget.Theotokos.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Outline color (dark red) -->
        <item name="boxStrokeColor">@color/dark_red</item>
        <item name="hintTextColor">@color/dark_red</item>

        <!-- Active (focused) state -->
        <item name="android:textColorHighlight">@color/dark_red</item>

        <!-- Cursor color -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlActivated">@color/dark_red</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>


    </style>
    <style name="Widget.Theotokos.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Default & Focused Outline Color -->
        <item name="boxStrokeColor">@color/dark_red</item>

        <!-- Hint Text Color -->
        <item name="hintTextColor">@color/dark_red</item>

        <!-- Cursor & Selection Handle Color -->
        <item name="colorControlActivated">@color/dark_red</item>

        <item name="editTextStyle">@style/Widget.Theotokos.TextInputEditText</item>
    </style>
    <!-- Base button style -->
    <style name="Widget.Theotokos.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_red</item>
        <item name="android:textColor">@color/white</item> <!-- Recommended for readability -->
        <item name="rippleColor">@color/dark_red_variant</item>
        <item name="cornerRadius">8dp</item> <!-- Optional rounded corners -->
        <item name="fontFamily">@font/cairo</item>

    </style>

    <!-- If you REALLY want red text (not recommended) -->
    <style name="Widget.Theotokos.Button.RedText" parent="Widget.Theotokos.Button">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/cairo</item>

    </style>
    <style name="Widget.Theotokos.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">?attr/fontFamily</item>
        <item name="fontFamily">?attr/fontFamily</item>
    </style>



    <!-- Base menu item style -->
    <style name="TextAppearance.Theotokos.MenuItem" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cairo</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- NavigationView style -->
    <style name="Widget.Theotokos.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.Theotokos.MenuItem</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.Theotokos.MenuItem</item>
    </style>

    <!-- Bottom Navigation Text Appearance -->
    <style name="TextAppearance.Theotokos.BottomNav" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cairo</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Navigation Item Style -->
    <style name="Widget.Theotokos.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.Theotokos.BottomNav</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
</resources>