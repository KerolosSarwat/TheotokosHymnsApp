<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme (Night Mode) -->
    <style name="Theme.Theotokos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors (Black background, white text) -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors (Dark red accents) -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/dark_red_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text & UI elements -->
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Font settings (kept from your original) -->
        <item name="android:fontFamily">@font/cairo</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:typeface">@font/cairo</item>


        <item name="textInputStyle">@style/Widget.Theotokos.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Theotokos.Button</item>
        <item name="editTextStyle">@style/Widget.Theotokos.TextInputEditText</item>
        <item name="navigationViewStyle">@style/Widget.Theotokos.NavigationView</item>
        <item name="bottomNavigationStyle">@style/Widget.Theotokos.BottomNavigationView</item>


    </style>
</resources>